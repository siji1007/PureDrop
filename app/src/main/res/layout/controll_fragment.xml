<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".controll_fragment">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/black"
        android:id="@+id/data_background"
        >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tableLayout"
            android:stretchColumns="*"
            />

    </FrameLayout>




    <ScrollView
        android:id="@+id/life"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/data_background"
        android:layout_marginTop="8dp"
        
        android:background="@color/white">
    
        
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_height="wrap_content">


            <!--THIS IS THE TDS LIFE MONITORING-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@color/darkBlue"
                app:cardCornerRadius="5dp">
                
              <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="horizontal"

                  android:layout_height="wrap_content">
                  <ImageView
                      android:layout_width="100dp"
                      android:layout_height="wrap_content"
                      android:src="@drawable/tds"

                      />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/darkBlue"

                        >


                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="TOTAL DISSOLVED SOLIDS"
                          android:textColor="@color/white"
                          android:textAlignment="center"
                          android:textStyle="bold"/>

                        <!--ADD HERE THE LIFE PERCENTAGE OF THE PART-->
                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="LIFE: 10%"
                          android:textColor="@color/white"
                          android:textStyle="bold"
                          android:layout_margin="10dp"
                          android:layout_alignParentBottom="true"
                          />
                    </RelativeLayout>

              </LinearLayout>
            </androidx.cardview.widget.CardView>



            <!--ELECTRIC CONDUCTIVITY LIFE MONITORING-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@color/darkBlue"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ec"

                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/darkBlue"

                        >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ELECTRONIC CONDUCTIVITY"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textStyle="bold"/>

                        <!--ADD HERE THE LIFE PERCENTAGE OF THE PART-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="LIFE: 10%"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_margin="10dp"
                            android:layout_alignParentBottom="true"
                            />
                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>




            <!--PH LEVEL LIFE MONITORING-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@color/darkBlue"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/phlevel"

                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/darkBlue"

                        >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PH LEVEL SENSOR"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textStyle="bold"/>

                        <!--ADD HERE THE LIFE PERCENTAGE OF THE PART-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="LIFE: 10%"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_margin="10dp"
                            android:layout_alignParentBottom="true"
                            />
                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>





            <!--TURBIDITY LIFE MONITORING-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:background="@color/darkBlue"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/turbidity"

                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/darkBlue"

                        >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TURBIDITY SENSOR"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textStyle="bold"/>

                        <!--ADD HERE THE LIFE PERCENTAGE OF THE PART-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="LIFE: 10%"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_margin="10dp"
                            android:layout_alignParentBottom="true"
                            />
                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>






        </LinearLayout>

    </ScrollView>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/life"
        android:layout_marginBottom="339dp"
        android:text="Scroll down to see parts life"
        android:textAlignment="center" />


    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="23dp"
        android:layout_marginBottom="153dp"
        android:background="@drawable/round_button"
        android:elevation="8dp"
        android:gravity="center">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/start_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/start_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="START"
            android:id="@+id/start_id"
            android:textColor="@color/black" />

    </FrameLayout>



</RelativeLayout>